<div class="table-responsive">
  <table id="resume-table" class="table table-condensed table-hover tablesorter">
    <thead>
      <tr>
        <th>Name</th>
        <th>Resume</th>
        <th>Major</th>
        <th>Email</th>
        <th>Graduation Year</th>
        <th>City</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <a href="/users/<%=u.id%>">
          <tr>
            <th> <!-- Name -->
              <a href="/users/<%=u.id%>">
                <%= u.name %>
              </a>
            </th>
            <th> <!-- Document -->
              <a target="_blank" href="<%= u.document.url(:original) %>">
                <%= image_tag u.document.url(:thumbnail) %>
              </a>
            </th> <!-- Info -->
            <th><%= field_or_nil u.major %></th>
            <th><%= field_or_nil u.email %></th>
            <th><%= field_or_nil u.year %></th>
            <th><%= field_or_nil u.city %></th>
          </tr>
        </a>
      <% end %>
    </tbody>
  </table>
</div>

<% if false %>
  <%= link_to "Download", {:controller => "resumes", :action => "download"}%>
<% end %>

<script>
  $(document).ready(function() {
    $('#resume-table').tablesorter();
  });
</script>
