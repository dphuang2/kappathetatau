<div class="container">
  <h3><%=@user.name%></h3>
  <p>Email: <%= @user.email if @user.email %></p>
  <p>Major: <%= @user.major if @user.major %></p>
  <p>Graduation Year: <%= @user.year if @user.year %></p>
  <% if @user.document %>
    <p>Resume:
      <a href="<%= @user.document.url(:original) %>">
        <%= image_tag @user.document.url(:thumbnail) %>
      </a>
    </p>
  <% end %>
</div>
